---
import BaseLayout from "../../layouts/BaseLayout.astro";
import PostCard from "../../components/PostCard.astro";
import { getCollection } from "astro:content";

export async function getStaticPaths() {
  const allPosts = await getCollection("posts", ({ data }) => {
    return import.meta.env.PROD ? !data.draft : true;
  });

  const tags = new Set<string>();
  for (const post of allPosts) {
    for (const tag of post.data.tags) {
      tags.add(tag);
    }
  }

  return [...tags].map((tag) => ({
    params: { tag },
    props: {
      tag,
      posts: allPosts
        .filter((post) => post.data.tags.includes(tag))
        .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()),
    },
  }));
}

const { tag, posts } = Astro.props;
---

<BaseLayout title={`#${tag} | Blog`} description={`Posts tagged with "${tag}"`}>
  <section>
    <h1 class="text-3xl font-bold text-balance text-neutral-100 mb-1">
      #{tag}
    </h1>
    <p class="text-[var(--color-text-secondary)] mb-8">
      {posts.length} {posts.length === 1 ? "post" : "posts"}
    </p>

    <div class="divide-y divide-[var(--color-border)]">
      {posts.map((post: any) => (
        <PostCard
          title={post.data.title}
          description={post.data.description}
          pubDate={post.data.pubDate}
          tags={post.data.tags}
          slug={post.id}
          heroImage={post.data.heroImage}
        />
      ))}
    </div>

    <a
      href="/blog/tags/"
      class="inline-block mt-8 text-sm text-[var(--color-accent)] hover:text-[var(--color-accent-hover)] transition-colors duration-150"
    >
      &larr; All tags
    </a>
  </section>
</BaseLayout>
