---
interface Props {
  headings: { depth: number; slug: string; text: string }[];
}

const { headings } = Astro.props;
const filtered = headings.filter((h) => h.depth >= 2 && h.depth <= 3);
---

{filtered.length > 0 && (
  <nav
    class="mb-8 rounded-lg border border-[var(--color-border)] bg-[var(--color-bg-secondary)] p-4"
    aria-label="Table of contents"
  >
    <p class="text-sm font-semibold text-neutral-100 mb-2">Contents</p>
    <ul class="space-y-1">
      {filtered.map((heading) => (
        <li>
          <a
            href={`#${heading.slug}`}
            class:list={[
              "block text-sm text-[var(--color-text-secondary)] hover:text-[var(--color-accent)] transition-colors duration-150",
              heading.depth === 3 && "pl-4",
            ]}
          >
            {heading.text}
          </a>
        </li>
      ))}
    </ul>
  </nav>
)}
